
@{
    ViewBag.Title = "Employees Index";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div id = "list">
        <h2 style = "text-align:center">Employees List</h2>
      <a href = "#" onclick="showedit(-1, true)">Add new item</a>
      <table class="table input-sm">
            <thead id = "listhead">
                <tr>
					<th valign="top">
						Employee ID
					</th>
					<th valign="top">
						Last Name
					</th>
					<th valign="top">
						First Name
					</th>
					<th valign="top">
						Title
					</th>
					<th valign="top">
						Title Of Courtesy
					</th>
					<th valign="top">
						Birth Date
					</th>
					<th valign="top">
						Hire Date
					</th>
					<th valign="top">
						Address
					</th>
					<th valign="top">
						City
					</th>
					<th valign="top">
						Region
					</th>
					<th valign="top">
						Postal Code
					</th>
					<th valign="top">
						Country
					</th>
					<th valign="top">
						Home Phone
					</th>
					<th valign="top">
						Extension
					</th>
					<th valign="top">
						Photo
					</th>
					<th valign="top">
						Notes
					</th>
					<th valign="top">
						Reports To
					</th>
					<th valign="top">
						Photo Path
					</th>
                  <th></th>
                </tr>
            </thead>
            <tbody id="listbody"></tbody>
        </table>
        <ul class="pagination">
        </ul>
    </div>
    <br />
  <div id="edit" >
        <h2 style = "text-align:center" id="formcaption">Edit Form</h2>
        <form role="form" class="form-horizontal" id="editDetailForm" name="editDetailForm" >
            <label hidden id="hiddenid" class="col-lg-12"></label>
            <div class="col-sm-12" >
                <div class="form-group form-group-sm" >
                    <label class="col-sm-3 control-label" ></label>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "EmployeeID" class="col-sm-3 control-label">EmployeeID</label>
                    <div class="col-sm-9">
                        <input type="text" id="EmployeeID" name="EmployeeID" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "LastName" class="col-sm-3 control-label">LastName</label>
                    <div class="col-sm-9">
                        <input type="text" id="LastName" name="LastName" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "FirstName" class="col-sm-3 control-label">FirstName</label>
                    <div class="col-sm-9">
                        <input type="text" id="FirstName" name="FirstName" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Title" class="col-sm-3 control-label">Title</label>
                    <div class="col-sm-9">
                        <input type="text" id="Title" name="Title" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "TitleOfCourtesy" class="col-sm-3 control-label">TitleOfCourtesy</label>
                    <div class="col-sm-9">
                        <input type="text" id="TitleOfCourtesy" name="TitleOfCourtesy" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "BirthDate" class="col-sm-3 control-label">BirthDate</label>
                    <div class="col-sm-9">
                        <input type="text" id="BirthDate" name="BirthDate" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "HireDate" class="col-sm-3 control-label">HireDate</label>
                    <div class="col-sm-9">
                        <input type="text" id="HireDate" name="HireDate" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Address" class="col-sm-3 control-label">Address</label>
                    <div class="col-sm-9">
                        <input type="text" id="Address" name="Address" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "City" class="col-sm-3 control-label">City</label>
                    <div class="col-sm-9">
                        <input type="text" id="City" name="City" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Region" class="col-sm-3 control-label">Region</label>
                    <div class="col-sm-9">
                        <input type="text" id="Region" name="Region" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "PostalCode" class="col-sm-3 control-label">PostalCode</label>
                    <div class="col-sm-9">
                        <input type="text" id="PostalCode" name="PostalCode" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Country" class="col-sm-3 control-label">Country</label>
                    <div class="col-sm-9">
                        <input type="text" id="Country" name="Country" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "HomePhone" class="col-sm-3 control-label">HomePhone</label>
                    <div class="col-sm-9">
                        <input type="text" id="HomePhone" name="HomePhone" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Extension" class="col-sm-3 control-label">Extension</label>
                    <div class="col-sm-9">
                        <input type="text" id="Extension" name="Extension" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Photo" class="col-sm-3 control-label">Photo</label>
                    <div class="col-sm-9">
                        <input type="text" id="Photo" name="Photo" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Notes" class="col-sm-3 control-label">Notes</label>
                    <div class="col-sm-9">
                        <input type="text" id="Notes" name="Notes" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "ReportsTo" class="col-sm-3 control-label">ReportsTo</label>
                    <div class="col-sm-9">
                        <input type="text" id="ReportsTo" name="ReportsTo" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "PhotoPath" class="col-sm-3 control-label">PhotoPath</label>
                    <div class="col-sm-9">
                        <input type="text" id="PhotoPath" name="PhotoPath" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <a href = '#' onclick='update()' id="updatebtn"> Update</a>
                        <a href = '#' onclick='canceledit()'>Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
        
</div>

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js" ></script>
<script src = "@Url.Content("~/SampleScripts/Employees.js")" type= "text/javascript" ></script>

