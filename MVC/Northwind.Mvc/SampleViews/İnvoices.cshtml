
@{
    ViewBag.Title = "İnvoices Index";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div id = "list">
        <h2 style = "text-align:center">İnvoices List</h2>
      <a href = "#" onclick="showedit(-1, true)">Add new item</a>
      <table class="table input-sm">
            <thead id = "listhead">
                <tr>
					<th valign="top">
						İd
					</th>
					<th valign="top">
						Order İd
					</th>
					<th valign="top">
						İnvoice Date
					</th>
					<th valign="top">
						Due Date
					</th>
					<th valign="top">
						Tax
					</th>
					<th valign="top">
						Shipping
					</th>
					<th valign="top">
						Amount Due
					</th>
                  <th></th>
                </tr>
            </thead>
            <tbody id="listbody"></tbody>
        </table>
        <ul class="pagination">
        </ul>
    </div>
    <br />
  <div id="edit" >
        <h2 style = "text-align:center" id="formcaption">Edit Form</h2>
        <form role="form" class="form-horizontal" id="editDetailForm" name="editDetailForm" >
            <label hidden id="hiddenid" class="col-lg-12"></label>
            <div class="col-sm-12" >
                <div class="form-group form-group-sm" >
                    <label class="col-sm-3 control-label" ></label>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "İd" class="col-sm-3 control-label">İd</label>
                    <div class="col-sm-9">
                        <input type="text" id="İd" name="İd" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Orderİd" class="col-sm-3 control-label">Orderİd</label>
                    <div class="col-sm-9">
                        <input type="text" id="Orderİd" name="Orderİd" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "İnvoiceDate" class="col-sm-3 control-label">İnvoiceDate</label>
                    <div class="col-sm-9">
                        <input type="text" id="İnvoiceDate" name="İnvoiceDate" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "DueDate" class="col-sm-3 control-label">DueDate</label>
                    <div class="col-sm-9">
                        <input type="text" id="DueDate" name="DueDate" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Tax" class="col-sm-3 control-label">Tax</label>
                    <div class="col-sm-9">
                        <input type="text" id="Tax" name="Tax" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "Shipping" class="col-sm-3 control-label">Shipping</label>
                    <div class="col-sm-9">
                        <input type="text" id="Shipping" name="Shipping" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm" >
                    <label for= "AmountDue" class="col-sm-3 control-label">AmountDue</label>
                    <div class="col-sm-9">
                        <input type="text" id="AmountDue" name="AmountDue" placeholder="Required" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <a href = '#' onclick='update()' id="updatebtn"> Update</a>
                        <a href = '#' onclick='canceledit()'>Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
        
</div>

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js" ></script>
<script src = "@Url.Content("~/SampleScripts/İnvoices.js")" type= "text/javascript" ></script>

