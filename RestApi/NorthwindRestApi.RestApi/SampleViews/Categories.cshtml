
@{
	ViewBag.Title = "Categories Index";
}

<div class="col-lg-12 col-md-12 col-sm-12">
	<div id = "list">
		<h2 style = "text-align:center">Categories List</h2>
	  <a href = "#" onclick="showedit(-1, true)">Add new item</a>
	  <table class="table input-sm">
			<thead id = "listhead">
				<tr>
					<th valign="top">
						Category ID
					</th>
					<th valign="top">
						Category Name
					</th>
					<th valign="top">
						Description
					</th>
					<th valign="top">
						Picture
					</th>
				  <th></th>
				</tr>
			</thead>
			<tbody id="listbody"></tbody>
		</table>
		<ul class="pagination">
		</ul>
	</div>
	<br />
  <div id="edit" >
		<h2 style = "text-align:center" id="formcaption">Edit Form</h2>
		<form role="form" class="form-horizontal" id="editDetailForm" name="editDetailForm" >
			<label hidden id="hiddenid" class="col-lg-12"></label>
			<div class="col-sm-12" >
				<div class="form-group form-group-sm" >
					<label class="col-sm-3 control-label" ></label>
				</div>

				<div class="form-group form-group-sm" >
					<label for= "CategoryID" class="col-sm-3 control-label">CategoryID</label>
					<div class="col-sm-9">
						<input type="text" id="CategoryID" name="CategoryID" placeholder="Required" class="form-control input-sm" />
					</div>
				</div>

				<div class="form-group form-group-sm" >
					<label for= "CategoryName" class="col-sm-3 control-label">CategoryName</label>
					<div class="col-sm-9">
						<input type="text" id="CategoryName" name="CategoryName" placeholder="Required" class="form-control input-sm" />
					</div>
				</div>

				<div class="form-group form-group-sm" >
					<label for= "Description" class="col-sm-3 control-label">Description</label>
					<div class="col-sm-9">
						<input type="text" id="Description" name="Description" placeholder="Required" class="form-control input-sm" />
					</div>
				</div>

				<div class="form-group form-group-sm" >
					<label for= "Picture" class="col-sm-3 control-label">Picture</label>
					<div class="col-sm-9">
						<input type="text" id="Picture" name="Picture" placeholder="Required" class="form-control input-sm" />
					</div>
				</div>

				<div class="form-group form-group-sm">
					<label class="col-sm-3 control-label"></label>
					<div class="col-sm-9">
						<a href = '#' onclick='update()' id="updatebtn"> Update</a>
						<a href = '#' onclick='canceledit()'>Cancel</a>
					</div>
				</div>
			</div>
		</form>
	</div>
		
</div>

<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js" ></script>
<script src = "@Url.Content("~/SampleScripts/Categories.js")" type= "text/javascript" ></script>

